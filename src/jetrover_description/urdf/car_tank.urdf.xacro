<?xml version="1.0" encoding="utf-8"?>
<robot name="car" xmlns:xacro="http://ros.org/wiki/xacro" >
  <xacro:property name="M_PI"               value="3.1415926535897931"/>
  <xacro:property name="base_link_mass"     value="1.6" /> 
  <xacro:property name="base_link_w"        value="0.30"/>
  <xacro:property name="base_link_h"        value="0.15"/>
  <xacro:property name="base_link_d"        value="0.10"/>

  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0.0 0.0 0.127" rpy="0 0 0"/>
  </joint>

  <link
    name="base_link">
    <xacro:box_inertial m="${base_link_mass}" w="${base_link_w}" h="${base_link_h}" d="${base_link_d}" x="0" y="0" z="-0.13" />
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://jetrover_description/meshes/tank/base_link.stl" />
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://jetrover_description/meshes/tank/base_link.stl" />
      </geometry>
    </collision>
  </link>
  <link
    name="wheel_link">
    <inertial>
      <origin
        xyz="-0.0039313449320714 8.89642839478193E-07 -0.0796378701576199"
        rpy="0 0 0" />
      <mass
        value="0.310705244841847" />
      <inertia
        ixx="3.77591275974407E-05"
        ixy="-7.01690329329116E-11"
        ixz="-2.38812142575087E-07"
        iyy="2.92014100130134E-05"
        iyz="5.80249181819311E-11"
        izz="3.86036385128316E-05" />
    </inertial>
    <visual>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://jetrover_description/meshes/tank/wheel_link.stl" />
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin
        xyz="0 0 0"
        rpy="0 0 0" />
      <geometry>
        <mesh
          filename="package://jetrover_description/meshes/tank/wheel_link.stl" />
      </geometry>
    </collision>
  </link>
  <joint
    name="wheel_joint"
    type="fixed">
    <origin
      xyz="0 0 0"
      rpy="0 0 0" />
    <parent
      link="base_link" />
    <child
      link="wheel_link" />
    <axis
      xyz="0 0 0" />
  </joint>
</robot>
